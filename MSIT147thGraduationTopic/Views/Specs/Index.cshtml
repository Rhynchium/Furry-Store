            <td>
                @Html.DisplayFor(modelItem => item.OnShelf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiscountPercentage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Merchandise.MerchandiseName)
