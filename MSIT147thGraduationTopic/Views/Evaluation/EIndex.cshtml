    <script src="../js/jquery-3.7.0.min.js"></script>
    <script>
        const starImages = [
            "/images/空星.png",
            "/images/一星.png",
            "/images/二星.png",
            "/images/三星.png",
            "/images/四星.png",
            "/images/五星.png",
        ];

        const stars = $('#score>img');
        let score = 0;

        stars.hover(
            
            function () {
                const index = stars.index(this);
                for (let i = 0; i <= index; i++) {
                    stars.eq(i).attr('src', starImages[i + 1]);
                }
            },
            function () {
                stars.attr('src', starImages[0]);
            }
        );

        stars.click(function () {
            const index = stars.index(this);
            stars.attr("src", starImages[0]);
            //$("img:lt(" + (index + 1) + ")").attr("src", starImages[i + 1]);
            for (let i = 0; i <= index; i++) {
                stars.eq(i).attr("src", starImages[i + 1]);
            }
            score = index + 1;

        });

        stars.dblclick(function () {

            stars.attr("src", "/images/空星.png");
            score = 0;
        });
    </script>

