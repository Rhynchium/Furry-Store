@model MSIT147thGraduationTopic.EFModels.Brand

@{
    Layout = "_BackstagePage";
    ViewData["Title"] = "新增品牌";
}

<div class="container">
    <h1>新增品牌</h1>

    <h4>輸入新增資料</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="BrandName" class="control-label"></label>
                    <input asp-for="BrandName" class="form-control" />
                    <span asp-validation-for="BrandName" class="text-danger"></span>
                </div>
                <hr />
                <div class="form-group">
                    <input type="submit" value="新增" class="btn btn-primary" />
                    @Html.ActionLink("取消", "Index", "Brands", null, new { @class = "btn btn-secondary" })
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {

}