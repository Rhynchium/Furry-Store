@using MSIT147thGraduationTopic.Models.Dtos;
@model CouponDto
@{
    Layout = "_BackstagePage";
    ViewData["Title"] = "優惠券管理系統";
    var listEditData = Model;
}

<header class="container px-5 mt-5">
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a id="hrefHomePage">優惠券管理系統</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">滿額送優惠券修改頁面</li>
        </ol>
    </nav>
</header>
<body class="d-flex flex-column h-100">
    <main class="flex-shrink-0">
        <!-- Page Content-->
        <section class="py-5">
            <div class="container px-5 my-5">
                <div class="text-center mb-5">
                    <h1 class="fw-bolder">滿額送優惠券修改頁面</h1>
                    <p class="lead fw-normal text-muted mb-0"></p>
                </div>
                <div class="container px-5 my-5">
                    <div class="row justify-content-center">
                        <div class="col-8 mb-3">
                            優惠券名稱<input type="text" name="CouponName" value="@Model.CouponName" class="form-control" placeholder="請輸入優惠券名稱">
                        </div>
                        <div class="col-8 mb-3">
                            適用對象<select name="CouponTagId" value="@Model.CouponTagId" class="form-select form-control" placeholder="請選擇適用對象">
                                <option></option>
                            </select>
                        </div>
                        <div class="col-8 mb-3">
                            開始日期<input name="CouponStartDate" value="@Model.CouponStartDate" type="date" class="form-control" placeholder="請輸入使用期限">
                        </div>
                        <div class="col-8 mb-3">
                            結束日期<input name="CouponEndDate" value="@Model.CouponEndDate" type="date" class="form-control" placeholder="請輸入使用期限">
                        </div>
                        <div class="col-8 mb-3">
                            折扣門檻<input name="CouponCondition" value="@Model.CouponCondition" type="number" class="form-control" placeholder="請輸入折扣門檻">
                        </div>
                        <div class="col-8 mb-3">
                            折扣金額<input name="CouponDiscount" value="@Model.CouponDiscount" type="number" class="form-control" placeholder="請輸入折扣金額">
                        </div>
                    </div>
                    <div class="row justify-content-center px-5 my-5">
                        <div class="col-auto">
                            <button type="button" class="btn btn-primary" id="btnCreate">修改</button>
                            <button type="button" class="btn btn-primary" id="btnBack">返回</button>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <!-- Footer-->
    <footer class="bg-dark py-4 mt-auto">
        <div class="container px-5">
            <div class="row align-items-center justify-content-between flex-column flex-sm-row">
                <div class="col-auto"><div class="small m-0 text-white">Copyright &copy; Your Website 2023</div></div>
                <div class="col-auto">
                    <a class="link-light small" href="#!">Privacy</a>
                    <span class="text-white mx-1">&middot;</span>
                    <a class="link-light small" href="#!">Terms</a>
                    <span class="text-white mx-1">&middot;</span>
                    <a class="link-light small" href="#!">Contact</a>
                </div>
            </div>
        </div>
    </footer>
</body>

