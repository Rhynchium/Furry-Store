        //新增員工表單驗證
        // 0. section最上面要引用  script src="~/js/MyBootstrapValidator.js"
        // 1. const myValid = new MyBootsrapValidator(表單element)
        const myValid = new MybootstrapValidator(document.querySelector('.needs-validation'))

        function createValidator() {
            // 2. myValid.validateFunction( 回傳bool的函式 ) //自訂判斷整個表單是否格式正確，正確回傳true
            myValid.validateFunction(() => {
                const name = document.querySelector('#couponName')
                const nameHasValue = !!name.value
                // 3. input元素.setValidate( 回傳bool的函式 , [錯誤訊息字串] )  //自訂判斷這個input是否格式正確，如果有輸入錯誤字串會更改顯示的錯誤訊息
                // ps:也可以使用 input元素.setValidate(...).setValidate(...).setValidate(...) 串接多個條件判斷  只要其中有錯誤就會顯示第一個錯的錯誤，包含錯誤信息
                name.setValidate(() => nameHasValue, '為必填欄位')

                const condition = document.querySelector('#condition')
                const conditionHasValue = !!condition.value
                const conditionNotNegative = +condition.value > 0
                condition.setValidate(() => conditionHasValue, '為必填欄位')
                    .setValidate(() => conditionNotNegative, '數值不得為負數')

                const discount = document.querySelector('#discount')
                const discountHasValue = !!discount.value
                const discountNotNegative = +condition.value > 0
                discount.setValidate(() => discountHasValue, '為必填欄位')
                    .setValidate(() => discountNotNegative, '數值不得為負數')

                discount.setValidate(() => discountValid)

                //全數正確回傳表單
                return nameValid && couponTagValid && discountTypeValid && conditionValid && discountValid
            })
            //myValid.startValidate()//開始驗證表單，放在送出的按鈕上做驗證，如果有錯會回傳false
            return myValid.startValidate()
        }
    </script>
