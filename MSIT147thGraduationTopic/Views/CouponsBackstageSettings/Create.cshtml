            }).then((result) => {
                /* Read more about isConfirmed, isDenied below */
                if (result.isDenied) {
                    location.href = `@Url.Content("~/CouponsBackstageSettings/Index")`;
                }
            })
        })

        $(document).ready(function () {
            // 將margin-right屬性設置為20px
            $('#btnDiscount').css('margin-right', '20px');
            $('#btnCreate').css('margin-right', '20px');
        });

        $('#btnCreate').on('click', function () {
            if (!createValidator()) {
                return;
            }

            if ('#txtDiscountPercentage' != null && '#txtGiftDiscount' != null) {
                Swal.fire({
                    icon: 'error',
                    title: '出了點狀況...',
                    text: '請再次確認優惠券的折扣種類'
                })
            }
        })

