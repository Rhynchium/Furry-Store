@{
    Layout = "_BackstagePage";
    ViewData["Title"] = "優惠券管理系統";
}
<header class="container px-5 mt-5">
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a id="hrefHomePage">優惠券管理系統</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">新增優惠券</li>
        </ol>
    </nav>
</header>
<body class="d-flex flex-column h-100">
    <main class="flex-shrink-0">
        <!-- Page Content-->
        <section class="py-5">
            <div class="container px-5 my-5">
                <div class="text-center mb-5">
                    <h1 class="fw-bolder">新增優惠券</h1>
                    <p class="lead fw-normal text-muted mb-0"></p>
                </div>
                <div class="container px-5 my-5">
                    <div>
                        <form id="create" name="create" data-index="-1" class="need-validation row justify-content-center" novalidate>
                            <div class="col-8 mb-3">
                                優惠券名稱<input id="couponName" type="text" class="form-control" placeholder="請輸入優惠券名稱">
                            </div>
                            <div class="col-8 mb-3">
                                適用對象<select id="couponTag" class="form-select form-control">
                                    <option value="none" class="" selected disabled hidden >請選擇適用對象</option>
                                    <option></option>
                                </select>
                            </div>
                            <br>
                            <div class="col-8 mb-3">
                                開始日期<input id="startDate" type="date" class="form-control" placeholder="請輸入使用期限">
                            </div>
                            <div class="col-8 mb-3">
                                結束日期<input id="endDate" type="date" class="form-control" placeholder="請輸入使用期限">
                            </div>
                            <div class="col-8 mb-3">
                                折扣類型<select id="discountType" class="form-control">
                                    <option value="none" selected disabled hidden>請選擇優惠券類型</option>
                                    <option>滿額送</option>
                                    <option>打折</option>
                                </select>
                            </div>
                            <div class="col-8 mb-3">
                                消費額度<input id="condition" type="number" class="form-control" placeholder="請輸入使用期限">
                            </div>
                            <div class="col-8 mb-3">
                                折扣<input id="discount" type="number" class="form-control" placeholder="請輸入使用期限">
                            </div>
                        </form>
                    </div>
                    <div class="row justify-content-center px-5 my-5">
                        <div class="col-auto">
                            <button type="button" class="btn btn-primary" id="btnCreate">新增</button>
                            <button type="button" class="btn btn-primary" id="btnBack">返回</button>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="py-5 bg-light">
            <div class="container px-5 my-5">
                <!--資料表-->
            </div>
        </section>
        <section class="py-5 bg-light">
            <div class="container px-5 my-5">
                <div class="row">
                    <div class="col">
                        <span class="text-muted">目前資料筆數:0/0</span>
                    </div>
                </div>
            </div>
            <div>
            </div>
        </section>
    </main>
    <!-- Footer-->
    <footer class="bg-dark py-4 mt-auto">
        <div class="container px-5">
            <div class="row align-items-center justify-content-between flex-column flex-sm-row">
                <div class="col-auto"><div class="small m-0 text-white">Copyright &copy; Your Website 2023</div></div>
                <div class="col-auto">
                    <a class="link-light small" href="#!">Privacy</a>
                    <span class="text-white mx-1">&middot;</span>
                    <a class="link-light small" href="#!">Terms</a>
                    <span class="text-white mx-1">&middot;</span>
                    <a class="link-light small" href="#!">Contact</a>
                </div>
            </div>
        </div>
    </footer>
</body>

